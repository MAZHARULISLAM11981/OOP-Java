    private void jButton_LoginActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton_LoginActionPerformed
        // TODO add your handling code here:
        lbl_U.setVisible(false);
        lbl_P.setVisible(false);
        if (Usernametxt.getText().equals(""))
        {
            lbl_U.setVisible(true);
        }else if (String.valueOf(Passwordtxt.getPassword()).equals(""))
        {
            lbl_P.setVisible(true);
        }
        else{
            Connection con;
            con = Myconnection.getConnection();
            PreparedStatement ps;
            try
            {
                ps=con.prepareStatement("SELECT * FROM user Where username= ? And password= ?");
                ps.setString(1,Usernametxt.getText());
                ps.setString(2,String.valueOf(Passwordtxt.getPassword()));
                ResultSet rs = ps.executeQuery();

                if(rs.next()){
                   JOptionPane.showMessageDialog(null," LogIn Successfully......");
                   MainForm mf = new MainForm();
                   mf.setVisible(true);
                   mf.pack();
                   mf.setLocationRelativeTo(null);
                   mf.setExtendedState(JFrame.MAXIMIZED_BOTH);
                   MainForm.jLabel_Username.setText("WELCOME ===> "+Usernametxt.getText()+"");
                   //count student by count table
                   MainForm.jLabel_StdCount.setText("=  "+Integer.toString(MyFunction.countData("student")));
                   //count course by count table
                   MainForm.jLabel_CrsCount.setText(" COURSE COUNT =  "+Integer.toString(MyFunction.countData("course")));
                   this.dispose();
                   
                }else{
                        JOptionPane.showMessageDialog(null, "Wrong Information...","WARNING",JOptionPane.WARNING_MESSAGE);
                }
                con.close();
            }

            catch (SQLException ex)
            {
                Logger.getLogger(LogInForm.class.getName()).log(Level.SEVERE, null, ex);
            }
        }
    }//GEN-LAST:event_jButton_LoginActionPerformed

